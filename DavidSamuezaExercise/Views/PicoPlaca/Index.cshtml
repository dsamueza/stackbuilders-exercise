@model  DavidSamuezaExercise.Task.PicoPlaca
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>@ViewBag.Usuario</h2>
@using (@Html.BeginForm())
{
    <p class="login-box-msg" aria-haspopup="true" aria-expanded="false"> <b> Ingrese Datos.</b>  </p>
    <div class="form-group has-feedback">
        <input type="text" class="form-control" name="Placa" placeholder="Placa" />
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
        @Html.ValidationMessageFor(model => model.Placa)
    </div>
    <div class="form-group has-feedback">
        <input type="text" class="form-control" name="Fecha" placeholder="Fecha(DD/MM/YY)" />
        <span class="glyphicon glyphicon-time form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback">
        <input type="text" class="form-control" name="hora" placeholder="Hora(HH:mm)" />
        <span class="glyphicon glyphicon-hourglass form-control-feedback"></span>
    </div>


    <div class="row">

        <div class="col-md-7 col-md-offset-5">
            <button type="submit" class="btn btn-primary btn-block btn-flat pull-right">
                Verificar <i class="glyphicon glyphicon-log-in"></i>
            </button>
        </div>
        <!-- /.col -->
    </div>
    if (@ViewBag.IsvalR == 1)
    {

        <br />
        <div class="alert alert-success" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            Su auto no se encuentra en Pico y Placa
        </div>
    }
    if (@ViewBag.IsvalR == 2)
    {
        <br />
        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            Su auto se encuentra en Pico y Placa
        </div>
    }



}
